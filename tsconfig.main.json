{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist/main",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true
  },
  "include": [
    "src/main/**/*",
    "src/content/**/*",
    "src/data/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
