{
  "name": "@mosaiq/desktop-app",
  "version": "0.1.0",
  "description": "Desktop application for Mosaiq",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "concurrently \"npm run build-main\" \"npm run build-renderer\"",
    "build-main": "tsc -p tsconfig.main.json",
    "build-renderer": "webpack --mode production",
    "dev": "concurrently \"npm run watch-main\" \"npm run watch-renderer\" \"npm run electron\"",
    "watch-main": "tsc -w -p tsconfig.main.json",
    "watch-renderer": "webpack --watch --mode development",
    "electron": "wait-on dist/main/main.js && wait-on dist/renderer/renderer.js && electron .",
    "start": "electron .",
    "test": "jest"
  },
  "dependencies": {
    "@mosaiq/common-ui": "^0.1.0",
    "@mosaiq/core": "^0.1.0",
    "@mosaiq/platform-abstractions": "^0.1.0",
    "@mozilla/readability": "^0.5.0",
    "check-disk-space": "^3.4.0",
    "cheerio": "^1.0.0-rc.12",
    "electron-store": "^8.1.0",
    "jsdom": "^21.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "zustand": "^4.3.7"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.32",
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "concurrently": "^8.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "electron": "^24.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1"
  }
}
